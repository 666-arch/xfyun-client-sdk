{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext", // 指定模块系统为最新的 ES 模块标准（import/export）
        "declaration": true, // 生成 .d.ts 类型声明文件，便于其他 ts 项目使用你的代码
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true, // 允许兼容 CommonJS 模
        "skipLibCheck": true, // 跳过对 node_modules 中类型声明文件（.d.ts）的检查，加速编译
        "moduleResolution": "node",
        "lib": [
            "ES2018",
            "DOM"
        ],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}